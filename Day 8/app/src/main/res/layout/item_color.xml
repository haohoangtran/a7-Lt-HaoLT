<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/album_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <View
        android:id="@+id/v_color"
        android:layout_width="@dimen/task_color_size"
        android:layout_height="@dimen/task_color_size"
        android:background="@drawable/shape_task_color"
        android:scaleType="center"/>
    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/cb_color"
        android:visibility="invisible"
        android:button="@drawable/cb_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />
</FrameLayout>